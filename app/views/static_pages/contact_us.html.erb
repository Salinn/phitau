<div class="row">
  <h2 style="text-align: center;">Executive Board</h2>
  <hr>
  <ul class="flipping-cards">
    <% @eboard.each do |position| %>
      <li>
        <input type="checkbox" id="item<%= position.first.id %>">
        <label for="item<%= position.first.id %>">
          <span class="wrapper">
            <span class="image">
              <h3 class="postition-front-title">
                <%= position.first.role.slice(0,1).capitalize %><%= position.first.role.slice(1..-1) %>
              </h3>
              <%= image_tag "info.png", class: "postition-front-flip-icon" %>
              <%= image_tag position.first.profile_picture_url, class:"user_img contact_img" if position.first.profile_picture? %>
            </span>
            <span class="back contact-back-background" >
              <h2>
                <%= position.first.role.slice(0,1).capitalize %><%= position.first.role.slice(1..-1) %>
              </h2>
              <h3>
                <%= position.first.position_display %>
                <%= position.first.first_name if position.first.first_name? %> <%= " " + position.first.last_name if position.first.last_name? %>
              </h3>
              <h2>Email</h2>
              <h3>
                <%= mail_to position.first.email %>
              </h3>
            </span>
          </span>
        </label>
      </li>
    <% end %>
  </ul>
  <div style="float: none; clear:both;"> </div>

