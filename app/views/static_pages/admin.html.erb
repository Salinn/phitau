<div>
  <table>
    <tr>
      <th>First Name</th>
      <th>Last Name</th>
      <th>Email</th>
    </tr>
    <% @users.each do |user| %>
      <% if user.role =="requesting" %>
        <tr>
          <td><%= user.first_name %></td>
          <td><%= user.last_name %></td>
          <td><%= user.email %></td>
          <td><%= form_for user do |f| %>
                    <%= f.hidden_field :role, :value => "member" %>
                    <%= f.submit "Accept" %>
                    <% end %></td>
          <td><%= form_for user do |f| %>
                    <%= f.hidden_field :role, :value => "not_a_member" %>
                    <%= f.submit "Deny" %>
            <% end %></td>
        </tr>
      <% end %>
    <% end %>
  </table>
</div>