<%= form_for(@text_message) do |f| %>
    <% if @text_message.errors.any? %>
        <div id="error_explanation">
          <h2><%= pluralize(@text_message.errors.count, "error") %> prohibited this text_message from being saved:</h2>

          <ul>
            <% @text_message.errors.full_messages.each do |msg| %>
                <li><%= msg %></li>
            <% end %>
          </ul>
        </div>
    <% end %>

    <div class="field">
      <%= f.text_field :to_number, value: params[:to_number], :placeholder => 'Enter Phone Number' %>
    </div>
    <div class="field">
      <%= f.label :user_group %><br>
      <%= f.collection_select :user_group, User::USERSTATUSES, :to_s, :to_s, :class => "col-md-3" %>
    </div>
    <div class="field">
      <%= f.label :message %><br>
      <%= f.text_field :message, value: params[:message], :placeholder => 'Enter Message' %>
    </div>
    <div class="field">
      <%= f.label :contact_info %><br>
      <%= f.text_field :contact_info, value: params[:contact_info], :placeholder => 'Enter Contact Info' %>
    </div>
    <div class="actions">
      <%= f.submit %>
    </div>
<% end %>
