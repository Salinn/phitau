<h1>Listing text_messages</h1>

<table>
  <thead>
    <tr>
      <th>To number</th>
      <th>User group</th>
      <th>Message</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @text_messages.each do |text_message| %>
      <tr>
        <td><%= text_message.to_number %></td>
        <td><%= text_message.user_group %></td>
        <td><%= text_message.message %></td>
        <td><%= link_to 'Show', text_message %></td>
        <td><%= link_to 'Edit', edit_text_message_path(text_message) %></td>
        <td><%= link_to 'Destroy', text_message, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

