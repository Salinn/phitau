<div class="row">
  <div class="col-md-10 col-md-offset-1 top-card-padding">
    <div class="card">
      <h1>All Sent Text Messages</h1>
      <h3><%= link_to 'New Text message', new_text_message_path %></h3>
      <table>
        <thead>
        <tr>
          <th>To number</th>
          <th>User group</th>
          <th>Message</th>
          <th>Show Text Message</th>
        </tr>
        </thead>

        <tbody>
        <% @text_messages.each do |text_message| %>
            <tr>
              <td><%= text_message.to_number %></td>
              <td><%= text_message.user_group %></td>
              <td><%= text_message.message %></td>
              <td><%= link_to 'Show', text_message %></td>
            </tr>
        <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>