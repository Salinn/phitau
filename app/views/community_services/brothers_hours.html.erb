          </tr>
          </thead>

          <tbody>
          <% @am.each do |user| %>
              <tr>
                <td><%= "#{user.first_name} #{user.last_name}" %></td>
                <td><%= total_hours(user) %></td>
                <td><%= link_to "#{user.first_name} #{user.last_name}'s Events", "brothers_events/#{user.id}" %></td>
              </tr>
          <% end %>
          </tbody>
        </table>
        <br>
      </div>
    </div>
  </div>
</div>