<h1>Listing posts</h1>

<%= link_to 'New Post', new_post_path, "data-no-turbolink" => true  %>

<table>
  <thead>
  <tr>
    <th>Title</th>
    <th>Content</th>
    <th>Top Card?</th>
    <th>Author</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>
  </thead>

  <tbody>
  <% @posts.reverse.each do |post| %>
      <tr>
        <td><%= post.title %></td>
        <td><%= post.content %></td>
        <td><%= link_to 'Edit', edit_post_path(post), 'data-no-turbolink' => true  %></td>
        <td><%= link_to 'Destroy', post, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
  <% end %>
  </tbody>
</table>

<br>
