<div class="col-md-6 center-block row">
  <div class="card_registration">
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name), :html => {:class => "form-horizontal"}) do |f| %>
    <%= devise_error_messages! %>
    <div class="registration_space">
      <%= f.text_field :first_name, autofocus: true, :placeholder => "First Name", :class => "col-md-3" %>
      <%= f.text_field :last_name, :placeholder => "Last Name",:class => "col-md-3" %>
    </div>
    <div style="float: none; clear:both;"> </div>

    <div class="registration_space">
      <%= f.password_field :password, autocomplete: "off", :placeholder => "Password", :class => "col-md-3" %>
      <%= f.password_field :password_confirmation, autocomplete: "off", :placeholder => "Password Confirmation", :class => "col-md-3" %>
    </div>
    <div style="float: none; clear:both;"> </div>

    <div class="registration_space">
      <%= f.text_field :phone_number, :placeholder => "Phone Number", :class => "col-md-3" %>
      <%= f.text_field :major, :placeholder => "Major", :class => "col-md-3" %>
    </div>

    <div class="registration_space">
      <%= f.email_field :email,  :placeholder => "Email", :class => "col-md-3" %>
      <%= f.collection_select :role, User::SIGNUPROLES, :to_s, :to_s, :class => "col-md-3" %>
      <div style="float: none; clear:both;"> </div>
    </div>
      <div style="float: none; clear:both;"> </div>
      <br>
        <div class="col-md-6 col-md-offset-2 registration_space"><%= recaptcha_tags %></div>
      <br>
        <div>
      <%= f.submit "Sign up", :class => "col-md-6 col-md-offset-3" %>
      <% end %>
    <br>
    </div>
  </div>
</div>