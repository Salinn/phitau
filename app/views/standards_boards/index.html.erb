<div class="row">
  <div class="col-xl-10 col-md-10 col-xs-10 col-xl-offset-1 col-md-offset-1 col-xs-offset-1">
    <div class="card">
      <h1>Standards Board Submissions</h1>

      <%= link_to 'New Standards Board Submission', new_standards_board_path %>

      <table class="standards-board-table">
        <thead>
        <tr>
          <th>User</th>
          <th>Reason</th>
          <th>Position</th>
          <th>Show</th>
          <th>Edit</th>
        </tr>
        </thead>

        <tbody>
        <% @standards_boards.each do |standards_board| %>
            <tr>
              <td><%= standards_board.user %></td>
              <td><%= standards_board.reason %></td>
              <td><%= standards_board.position %></td>
              <td><%= link_to 'Show', standards_board %></td>
              <td><%= link_to 'Edit', edit_standards_board_path(standards_board) %></td>
            </tr>
        <% end %>
        </tbody>
      </table>

      <br>
    </div>
  </div>
</div>

