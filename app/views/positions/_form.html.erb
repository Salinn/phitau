<%= form_for(@position) do |f| %>
  <% if @position.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@position.errors.count, "error") %> prohibited this position from being saved:</h2>

      <ul>
      <% @position.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :position_name %><br>
    <%= f.text_field :position_name %>
  </div>
  <div class="field">
    <%= f.label :user_id %><br>
    <%= f.collection_select :user_id, User.order(:first_name), :id, :name, { "style" => "width:200px" } %>
  </div>
  <div class="field">
    <%= f.label :role_id %><br>
    <%= f.collection_select :role_id, Role.order(:name), :id, :name, { "style" => "width:200px" }  %>
  </div>
  <div class="field posts_checkboxes">
    <%= f.label :on_eboard %><br>
    <%= f.check_box :on_eboard %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
